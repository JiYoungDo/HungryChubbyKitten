<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mink"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/register_animation_cat"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toTopOf="@id/register_tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_rawRes ="@raw/cat"
        app:lottie_loop="true"
        />

    <TextView
        android:id="@+id/register_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text=" 회원가입 "
        android:textColor="@color/mink"
        android:textSize="45sp"
        android:textStyle="bold"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="170dp"
        tools:ignore="HardcodedText" />



    <EditText
        android:id="@+id/register_et_id"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:hint="ID"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_tv_title"
        android:layout_marginTop="60dp"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/register_id_check_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="중복 검사"
        android:textSize="20sp"
        android:textColor="@color/mink"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_et_id"
        tools:ignore="HardcodedText" />


    <EditText
        android:id="@+id/register_et_pw"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:hint="PASSWORD"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_id_check_btn"
        android:layout_marginTop="20dp"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/register_id_register_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20sp"
        android:textColor="@color/mink"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_et_pw"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/register_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:background="@color/mink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text=" animation by thrive.io "
        android:textSize="9sp"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>